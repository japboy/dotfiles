# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Git configuration
[.gitattributes]
indent_style = tab
tab_width = 4

# Markdown
[*.{md,markdown}]
trim_trailing_whitespace = false

# Web frontend coding
[*.{css,html,json,js,cjs,mjs,jsx,ts,tsx,vue}]
indent_size = 2
indent_style = space
