# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

# Git configuration
[.gitattributes]
indent_style = tab
tab_width = 4

# Markdown
[*.{md,markdown}]
trim_trailing_whitespace = false

# Web frontend coding
[*.{css,html,json,js,cjs,mjs,jsx,ts,tsx,vue}]
indent_style = space
indent_size = 2
