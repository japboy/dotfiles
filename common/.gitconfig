[alias]
	log = log --graph
	merge =merge --no-ff
[color]
	branch = auto
	diff = auto
	status = auto
	ui = true
[core]
	autocrlf = input
	excludesfile = ~/.gitignore
[diff]
	tool = vim
[difftool "vim"]
	cmd = vim -d $LOCAL $REMOTE
[merge]
	ff = true
	tool = vim
[mergetool "vim"]
	cmd = vim -d $LOCAL $MERGED $REMOTE
	keepbackup = false
